#include "Rosetta.h"


void Rosetta::initGenome(){

	switch (m_eGenomeType)
	    {
	        case GENOMETYPE_TOKAMAK:
	            std::cout << "Initializing tokamak genome" << std::endl;
	            initTokamak();
	            break;

	        default:
	            std::cout << "Unknown genome type" << std::endl;
	            break;
	    }


}

void Rosetta::initTokamak(){
	Genome cGenome;

	std::string strType = "Tokamak";

	cGenome.newGenome(strType);

	cGenome.addChromosome("1");
	cGenome.addGene("1", "1");

	cGenome.addChromosome("2");
	cGenome.addGene("1", "2");

	cGenome.addChromosome("3");
	cGenome.addGene("1", "3");

	std::cout << cGenome.GetGenome() << std::endl;

}


