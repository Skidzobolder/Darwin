#include "Rosetta.h"


void Rosetta::initGenome(){

	switch (m_eGenomeType)
	    {
	        case GENOMETYPE_TOKAMAK:
	            std::cout << "Initializing tokamak genome" << std::endl;
	            initTokamak();
	            break;

	        default:
	            std::cout << "Unknown genome type" << std::endl;
	            break;
	    }


}

void Rosetta::initTokamak(){
	Genome cGenome;

	std::string strType = "Tokamak5";

	cGenome.newGenome(strType);
	//std::cout << cGenome.GetGenome() << std::endl;

	const char* pchId;

	pchId = "1";
	cGenome.addChromosome(pchId);


	pchId = "2";
	cGenome.addChromosome(pchId);


	pchId = "3654";
	cGenome.addChromosome("5");

	std::cout << std::endl << cGenome.GetGenome() << std::endl;

	pchId = "1";
	cGenome.addGene(pchId, "2");
	std::cout << cGenome.GetGenome() << std::endl;



}


